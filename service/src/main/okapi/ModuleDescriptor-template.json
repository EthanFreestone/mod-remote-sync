{
  "id": "${info.app.name}-${info.app.version}",
  "name": "${info.app.name}",
  "provides": [
    {
      "id": "remote-sync",
      "version": "${info.app.minorVersion}",
      "handlers" : [
        {
          "methods": [ "GET" ],
          "pathPattern": "/remote-sync/statusReport",
          "permissionsRequired": [ "remote-sync.statusReport.get" ]
        },
        {
          "methods": [ "GET" ],
          "pathPattern": "/remote-sync/settings*",
          "permissionsRequired": [ "remote-sync.settings.get" ]
        },
        {
          "methods": [ "POST" ],
          "pathPattern": "/remote-sync/settings*",
          "permissionsRequired": [ "remote-sync.settings.post" ]
        },
        {
          "methods": [ "PUT" ],
          "pathPattern": "/remote-sync/settings*",
          "permissionsRequired": [ "remote-sync.settings.put" ]
        },
        {
          "methods": [ "DELETE" ],
          "pathPattern": "/remote-sync/settings*",
          "permissionsRequired": [ "remote-sync.settings.delete" ]
        },

        {
          "methods": ["GET"],
          "pathPattern": "/remote-sync/refdata",
          "permissionsRequired": [ "remote-sync.refdata.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/remote-sync/refdata/{domain}/{property}",
          "permissionsRequired": [ "remote-sync.refdata.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/remote-sync/refdata/{id}",
          "permissionsRequired": [ "remote-sync.refdata.item.get" ]
        },{
          "methods": ["POST"],
          "pathPattern": "/remote-sync/refdata",
          "permissionsRequired": [ "remote-sync.refdata.item.post" ]
        },{
          "methods": ["PUT"],
          "pathPattern": "/remote-sync/refdata/{id}",
          "permissionsRequired": [ "remote-sync.refdata.item.put" ]
        },{
          "methods": ["DELETE"],
          "pathPattern": "/remote-sync/refdata/{id}",
          "permissionsRequired": [ "remote-sync.refdata.item.delete" ]
        }

      ]
    },
    {
      "id": "_tenant",
      "version": "1.2",
      "interfaceType" : "system",
      "handlers": [
        {
          "permissionsRequired" : [],
          "methods": ["POST", "DELETE"],
          "pathPattern": "/_/tenant"
        }, {
         "permissionsRequired" : [],
         "methods" : [ "POST" ],
         "pathPattern" : "/_/tenant/disable"
        }

      ]
    }, {
      "id": "_timer",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/remote-sync/settings/worker",
          "unit": "minute",
          "delay": "60",
          "modulePermissions": [
            "configuration.entries.item.get",
            "configuration.entries.collection.get"
          ]
        }
      ]
    }

  ],
  "permissionSets": [
    {
      "permissionName": "remote-sync.settings.get",
      "displayName": "settings get",
      "description": "get settings",
      "visible": false
    }, 
    {
      "permissionName": "remote-sync.settings.post",
      "displayName": "settings post",
      "description": "post settings",
      "visible": false
    }, 
    {
      "permissionName": "remote-sync.settings.put",
      "displayName": "settings put",
      "description": "put settings",
      "visible": false
    }, {
      "permissionName": "remote-sync.settings.delete",
      "displayName": "settings delete",
      "description": "delete settings",
      "visible": false
    },
    {
      "permissionName": "remote-sync.settings.read",
      "displayName": "settings read",
      "description": "read settings",
      "visible": false,
      "subPermissions": [
          "remote-sync.settings.get"
      ]
    }, 
    {
      "permissionName": "remote-sync.statusReport.get",
      "displayName": "Status Report Get",
      "description": "get statusReport",
      "visible": false
    },
    {
      "permissionName": "remote-sync.statusReport.read",
      "displayName": "Status Report Read",
      "description": "read statusReport",
      "visible": false,
      "subPermissions": [
          "remote-sync.statusReport.get"
      ]
    },
    {
      "permissionName": "remote-sync.settings.write",
      "displayName": "settings write",
      "description": "write settings",
      "visible": false,
      "subPermissions": [
          "remote-sync.settings.read",
          "remote-sync.settings.post",
          "remote-sync.settings.put",
          "remote-sync.settings.delete"
      ]
    },

    {
      "permissionName": "remote-sync.refdata.collection.get",
      "displayName": "Refdata collection get",
      "description": "Get a collection of refdata records"
    },
    {
      "permissionName": "remote-sync.refdata.item.get",
      "displayName": "Refdata item get",
      "description": "Get refdata record"
    },
    {
      "permissionName": "remote-sync.refdata.view",
      "subPermissions": [
        "remote-sync.refdata.collection.get",
        "remote-sync.refdata.item.get"
      ]
    },
    {
      "permissionName": "remote-sync.refdata.item.post",
      "displayName": "Refdata item post",
      "description": "Post refdata record"
    },
    {
      "permissionName": "remote-sync.refdata.item.put",
      "displayName": "Refdata item put",
      "description": "Put refdata record"
    },
    {
      "permissionName": "remote-sync.refdata.edit",
      "subPermissions": [
        "remote-sync.refdata.view",
        "remote-sync.refdata.item.post",
        "remote-sync.refdata.item.put"
      ]
    },
    {
      "permissionName": "remote-sync.refdata.item.delete",
      "displayName": "Refdata item delete",
      "description": "Delete refdata record"
    },
    {
      "permissionName": "remote-sync.refdata.manage",
      "subPermissions": [
        "remote-sync.refdata.edit",
        "remote-sync.refdata.collection.get",
        "remote-sync.refdata.item.view"
      ]
    }

  ],
  "launchDescriptor": {
    "dockerImage": "${info.app.name}:${info.app.version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8079/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
